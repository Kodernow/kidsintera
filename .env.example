# Supabase Configuration
# Get these values from your Supabase project dashboard at https://supabase.com/dashboard
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# Application Configuration
VITE_APP_NAME=TaskFlow
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Creative Portfolio SAAS Application

# Environment
NODE_ENV=development
VITE_NODE_ENV=development

# API Configuration
VITE_API_BASE_URL=http://localhost:3000/api

# Payment Gateway Configuration (Optional - for future use)
# Stripe
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here

# Razorpay
VITE_RAZORPAY_KEY_ID=rzp_test_your_razorpay_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_key_secret_here

# Email Configuration (Optional - for future use)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# File Upload Configuration (Optional)
VITE_MAX_FILE_SIZE=5242880
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Analytics (Optional)
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Social Login Configuration (Optional)
VITE_GOOGLE_CLIENT_ID=your-google-client-id
VITE_FACEBOOK_APP_ID=your-facebook-app-id

# Security
VITE_ENCRYPTION_KEY=your-32-character-encryption-key-here
JWT_SECRET=your-jwt-secret-key-for-backend

# Database Configuration (if using additional databases)
DATABASE_URL=postgresql://username:password@localhost:5432/taskflow_db

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379

# Admin Configuration
VITE_ADMIN_EMAIL=harshal9901@gmail.com
ADMIN_DEFAULT_PASSWORD=admin@123

# Feature Flags
VITE_ENABLE_SOCIAL_LOGIN=true
VITE_ENABLE_EMAIL_VERIFICATION=false
VITE_ENABLE_PAYMENT_GATEWAY=true
VITE_ENABLE_ANALYTICS=false

# Development Tools
VITE_ENABLE_DEVTOOLS=true
VITE_SHOW_DEBUG_INFO=false